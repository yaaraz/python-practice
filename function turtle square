import turtle

def ch3Turtle_2():
    wn = turtle.Screen()

    wn.bgcolor("lightgreen")
    wn.title("Hello, Tess!")

    tess = turtle.Turtle()
    tess.clor("blue")
    tess.pensize(3)

def draw_square(t,sz):
    "'Make turtle t draw a square of sz.'"
    for i in range (4):
        t.forward(sz)
        t.left(90)

import turtle
wn = turtle.Screen()
wn.bgcolor("lightgreen")

wn.title("Hello, Tess!")

tess = turtle.Turtle()
tess.color("blue")
tess.pensize(3)
alex= turtle.Turtle() ##Create alex
draw_square(alex, 50)
wn.mainloop()
